{
  "name": "suggestion-bot",
  "version": "0.0.1-dev",
  "description": "suggestion-bot submits code reviews with suggestions based on your diffs",
  "keywords": [
    "code review",
    "diff",
    "github",
    "pull request",
    "review",
    "suggestion"
  ],
  "homepage": "https://github.com/tido64/suggestion-bot#readme",
  "license": "MIT",
  "author": {
    "name": "Tommy Nguyen",
    "email": "4123478+tido64@users.noreply.github.com"
  },
  "files": [
    "cli.js",
    "src/"
  ],
  "main": "src/index.js",
  "bin": "cli.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tido64/suggestion-bot.git"
  },
  "scripts": {
    "build": "yarn clean && yarn lint && tsc",
    "clean": "git clean -dfqx -- src/ test/",
    "format": "prettier --write $(git ls-files '*.js' '*.json' '*.md' '*.mjs' '*.yml' ':!:.yarn/**/*.cjs')",
    "lint": "eslint $(git ls-files '*.js' '*.mjs' ':!:*.config.js' ':!:.yarn/**/*.js')",
    "suggest": "suggestion-bot",
    "test": "node --test --experimental-test-coverage $(git ls-files 'test/*.test.mjs')"
  },
  "dependencies": {
    "@octokit/core": "^5.0",
    "@octokit/plugin-rest-endpoint-methods": "^10.0.0",
    "azure-devops-node-api": "^12.0",
    "commander": "^8.1",
    "parse-diff": "^0.11"
  },
  "devDependencies": {
    "@types/node": "^18.0",
    "codecov": "^3.0",
    "eslint": "^8.0",
    "prettier": "^3.0",
    "semantic-release": "^22.0.0",
    "typescript": "^5.0"
  },
  "engines": {
    "node": ">=18.12"
  },
  "packageManager": "yarn@3.6.3",
  "resolutions": {
    "@semantic-release/npm/npm": "link:."
  },
  "eslintConfig": {
    "extends": "./.github/eslint.config.js"
  },
  "prettier": "./.github/prettierrc.json",
  "release": {
    "extends": "./.github/semantic-release.json"
  }
}
