{
  "name": "suggestion-bot",
  "version": "0.0.1-dev",
  "description": "suggestion-bot submits code reviews with suggestions based on your diffs",
  "keywords": [
    "code review",
    "diff",
    "github",
    "pull request",
    "review",
    "suggestion"
  ],
  "homepage": "https://github.com/tido64/suggestion-bot#readme",
  "license": "MIT",
  "author": {
    "name": "Tommy Nguyen",
    "email": "tn0502@gmail.com"
  },
  "files": [
    "cli.js",
    "src/"
  ],
  "main": "src/index.js",
  "bin": "cli.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tido64/suggestion-bot.git"
  },
  "scripts": {
    "build": "yarn clean && yarn lint && tsc",
    "clean": "git clean -dfqx -- src/ test/",
    "format": "prettier --end-of-line auto --write $(git ls-files '*.js' '*.yml' ':!:.yarn/**/*.js')",
    "lint": "eslint $(git ls-files '*.js' ':!:.yarn/**/*.js')",
    "test": "jest"
  },
  "dependencies": {
    "@octokit/rest": "^18.0.0",
    "azure-devops-node-api": "^10.0.0",
    "commander": "^8.1.0",
    "parse-diff": "^0.8.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.0",
    "codecov": "^3.0.0",
    "eslint": "^7.0.0",
    "eslint-plugin-jest": "^24.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "jest": "^27.0.0",
    "prettier": "^2.3.0",
    "semantic-release": "^17.0.0",
    "typescript": "~4.3.0"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended",
      "plugin:jest/style"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/__fixtures__/",
      "/node_modules/"
    ],
    "roots": [
      "test/"
    ]
  },
  "release": {
    "branches": [
      "trunk"
    ],
    "tagFormat": "${version}"
  }
}
